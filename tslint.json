{
  "extends": "tslint:recommended",
  "rulesDirectory": [],
  "rules": {
      "max-line-length": {
          "options": [120]
      },
      "new-parens": true,
      "no-arg": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": false,
      "no-console": {
          "severity": "warning",
          "options": [
              "debug",
              "log",
              "time",
              "timeEnd",
              "trace"
          ]
      },
      "quotemark": {
        "options": [
            "single",
            "avoid-escape"
        ]
      },
      "interface-name": false,
      "object-literal-sort-keys": false
  },
  "jsRules": {
      "max-line-length": {
          "options": [120]
      }
  }
}